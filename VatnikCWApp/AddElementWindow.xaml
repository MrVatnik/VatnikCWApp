<Window x:Class="VatnikCWApp.AddElementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VatnikCWApp"
        mc:Ignorable="d"
        Title="AddElementWindow" Height="126" Width="800">
    <Grid>
        <DataGrid x:Name="ElementDataGrid" AutoGenerateColumns ="True" Margin="233,10,10,0" Height="49" VerticalAlignment="Top" AutoGeneratingColumn="ElementDataGrid_AutoGeneratingColumn" CanUserAddRows="False"/>
        <TextBox x:Name="PriceTextBox" HorizontalAlignment="Left" Height="23" Margin="108,37,0,0" TextWrapping="Wrap" Text="0.1" VerticalAlignment="Top" Width="120"/>
        <ComboBox x:Name="TypeComboBox" HorizontalAlignment="Left" Margin="108,10,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="comboBox_SelectionChanged"/>
        <Label x:Name="label1" Content="New items type" Margin="10,10,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Label x:Name="label2" Content="Price" Margin="10,33,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <Button x:Name="SaveButton" Content="Save" HorizontalAlignment="Left" Margin="10,0,0,10" VerticalAlignment="Bottom" Width="75" Click="SaveButton_Click"/>

    </Grid>
</Window>
